# https://usher.dev/posts/my-email-setup/
# https://cvanelteren.github.io/post/mu4e/
Expunge None
Create Near
SyncState *

IMAPAccount namy.19@gmail.com
Host imap.gmail.com
User namy.19@gmail.com
AuthMechs XOAUTH2
PassCmd "oauth2get google namy.19@gmail.com"
SSLType IMAPS
SSLVersions TLSv1.1 TLSv1.2

IMAPStore namy.19@gmail.com-remote
Account namy.19@gmail.com

MaildirStore namy.19@gmail.com-local
Path ~/mail/namy.19@gmail.com/
Inbox ~/mail/namy.19@gmail.com/Inbox
SubFolders Verbatim

MaildirStore namy.19@gmail.com-archive
Path ~/mail/archive-namy.19@gmail.com/

Channel namy.19@gmail.com-archive
Far ":namy.19@gmail.com-remote:[Google Mail]/All Mail"
Near ":namy.19@gmail.com-archive:Archive"
Sync All

Channel namy.19@gmail.com-trash
Far ":namy.19@gmail.com-remote:[Google Mail]/Bin"
Near ":namy.19@gmail.com-archive:Trash"
Sync Pull

Channel namy.19@gmail.com-drafts
Far ":namy.19@gmail.com-remote:[Google Mail]/Drafts"
Near ":namy.19@gmail.com-local:Drafts"
Sync Pull
Expunge Both

Channel namy.19@gmail.com-sent
Far ":namy.19@gmail.com-remote:[Google Mail]/Sent Mail"
Near ":namy.19@gmail.com-local:Sent"
Sync Pull
Expunge Both

Channel namy.19@gmail.com-inbox
Far ":namy.19@gmail.com-remote:INBOX"
Near ":namy.19@gmail.com-local:Inbox"
Sync All
Expunge Both

Group namy.19@gmail.com
Channel namy.19@gmail.com-trash
Channel namy.19@gmail.com-inbox
Channel namy.19@gmail.com-drafts
Channel namy.19@gmail.com-sent
Channel namy.19@gmail.com-archive

Group all

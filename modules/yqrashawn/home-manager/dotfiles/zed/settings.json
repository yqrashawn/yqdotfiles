// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "context_servers": {
    "emacs": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "http://localhost:18684/mcp/v1/messages"]
    },
    "exa_search": {
      "source": "custom",
      "enabled": true,
      "command": "bun",
      "args": ["run", "~/Dropbox/sync/exa-mcp-server/.smithery/stdio/index.cjs"]
    },
    "jina_search": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "http://localhost:18682/mcp"]
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": true,
  "vim_mode": true,
  "theme": { "mode": "system", "dark": "One Dark", "light": "One Light" },
  "load_direnv": "direct",
  "auto_install_extensions": {
    "html": true,
    "clojure": true,
    "toml": true,
    "xml": true,
    "log": true
  },
  "ui_font_family": "PragmataPro Mono Liga",
  "buffer_font_family": "PragmataPro Mono Liga",
  "buffer_font_size": 15,
  "project_panel": { "folder_icons": false, "indent_size": 10 }
}

#!/usr/bin/env bb

(ns syncmail
  (:require
   [clojure.core.async :refer [chan go-loop <! put! <!! take!]]
   ;; [babashka.process :as p :refer [process]]
   [clojure.edn :as edn]
   [clojure.java.shell :refer [sh]]
   [clojure.string :as s]))

(defonce c (chan))

(sh "/run/current-system/sw/bin/bash" (str (System/getenv "HOME") "/.nixpkgs/modules/yqrashawn/home-manager/dotfiles/notmuch-hooks/pre-sync"))
(sh "/run/current-system/sw/bin/mbsync" "-a" :dir (str (System/getenv "HOME") "/mail/namy.19@gmail.com"))
(sh "/run/current-system/sw/bin/notmuch" "new")

(defn notify [title subtitle message]
  (sh
   "/opt/homebrew/bin/alerter"
   "-message" message
   "-timeout" "30"
   "-group" "NOTMUCH"
   "-sender" "org.gnu.Emacs"
   "-contentImage" (str (System/getenv "HOME") "/.config/sketchybar/plugins/email.png")
   "-sound" "default"
   "-title" title
   "-subtitle" subtitle))

(defn new-unread? []
  (if (pos? (-> (sh "/run/current-system/sw/bin/notmuch" "count" (str "tag:inbox and tag:unread and date:5m.."))
                :out
                s/trim-newline
                Integer/parseInt))
    (let [new (-> (sh "/run/current-system/sw/bin/notmuch" "search" "--format" "sexp" "tag:inbox and tag:unread and date:5m..")
                  :out
                  edn/read-string)
          new (map #(apply hash-map %) new)]
      (doseq [{:keys [authors subject]} new]
        (put! c [(str "New email from " authors) (str "ðŸ“§" subject) "New email from Notmuch"]))
      (put! c :end))
    (put! c :end)))

(let [unread-count (-> (sh "/run/current-system/sw/bin/notmuch" "count" "tag:inbox and tag:unread")
                       :out
                       s/trim-newline
                       Integer/parseInt)]
  (println unread-count)
  (new-unread?))

(<!! (go-loop []
       (let [msg (<! c)]
         (when (vector? msg)
           (apply notify msg)
           (recur)))))

#!/usr/bin/env bb

(ns syncmail
  (:require
   [clojure.core.async :as a]
   ;; [babashka.process :as p :refer [process]]
   [clojure.edn :as edn]
   [clojure.java.shell :refer [sh]]
   [clojure.string :as s]))

(defonce c (a/chan))

(def notmuch "/run/current-system/sw/bin/notmuch")
(def mbsync "/run/current-system/sw/bin/mbsync")

(defn notify [title subtitle message]
  (try (sh
        "/opt/homebrew/bin/alerter"
        "-message" message
        "-timeout" "30"
        "-group" "NOTMUCH"
        "-sender" "org.gnu.Emacs"
        "-contentImage" (str (System/getenv "HOME") "/.config/sketchybar/plugins/email.png")
        "-sound" "default"
        "-title" title
        "-subtitle" subtitle)
       (catch Exception _e)))

(defn new-unread? []
  (if (pos? (-> (sh notmuch "count"
                    (str "tag:inbox and tag:unread and date:5m.."))
                :out
                s/trim-newline
                Integer/parseInt))
    (let [new
          (->
           (sh notmuch "search" "--format" "sexp" "tag:inbox and tag:unread and date:5m..")
           :out
           edn/read-string)
          new (map #(apply hash-map %) new)]
      (doseq [{:keys [authors subject]} new]
        (a/put! c [(str "New email from " authors) (str "ğŸ“§" subject) "New email from Notmuch"]))
      (a/put! c :end))
    (a/put! c :end)))

(sh
 "/run/current-system/sw/bin/bash"
 (str
  (System/getenv "HOME")
  "/.nixpkgs/modules/yqrashawn/home-manager/dotfiles/notmuch-hooks/pre-sync"))

(try
  (sh mbsync "-a" :dir (str (System/getenv "HOME") "/mail/namy.19@gmail.com"))
  (catch Exception _e))

(sh notmuch "new")
(let [unread-count (-> (sh notmuch "count" "tag:inbox and tag:unread")
                       :out
                       s/trim-newline
                       Integer/parseInt)]
  (println unread-count)
  (new-unread?))

(a/<!!
 (a/go-loop []
   (let [msg (a/<! c)]
     (when (vector? msg)
       (apply notify msg)
       (recur)))))

#!/usr/local/bin/bb

(ns yabai.layout
  (:require
   [lib.yabai.core :as y]))

(let [{cur-win-space :space} (y/m :query :--windows :--window)
      {:keys [zoom-fullscreen id space]} (y/m :query :--windows :--window :recent)]
  (when (and (= zoom-fullscreen 1) (= cur-win-space space))
    (y/m :window id :--toggle :zoom-fullscreen)))